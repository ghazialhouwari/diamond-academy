{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "types": ["@nuxtjs/i18n", "vitest/globals"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node" /* Specify the base directory to resolve non-relative module names. */,
    "paths": {
      "#app": ["./node_modules/nuxt/dist/app"],
      "#imports": ["./node_modules/nuxt/app.d.ts"],
      "#pages": ["./node_modules/nuxt/dist/pages/runtime/index.d.ts"],
      "#head": ["./node_modules/nuxt/dist/index.d.ts"],
      "#i18n": ["./src/runtime/composables.ts"],
      "#build/i18n.options.mjs": ["./src/options.d.ts"],
      "#build/i18n.internal.mjs": ["./src/runtime/internal.ts"],
      "#build/i18n.utils.mjs": ["./src/runtime/utils.ts"]
    }
  },
  "exclude": ["**/*/dist/*", "docs/**", "playground/**", "tests/**"]
}
